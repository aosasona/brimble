{
  "name": "brimble",
  "version": "2.0.0",
  "description": "Brimble",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/src/index.js",
    "dev": "nodemon -r tsconfig-paths/register ./src/index.ts",
    "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s . -o ./dist",
    "format": "prettier --write \"app.ts\" \"src/**/*.ts\"",
    "lint": "eslint \"app.ts\" \"src/**/*.ts\" --fix",
    "test": "jest --watch --runInBand --detectOpenHandles"
  },
  "license": "MIT",
  "dependencies": {
    "@brimble/models": "^1.2.0-alpha.1",
    "@brimble/utils": "^1.2.0-alpha.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dayjs": "^1.10.6",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "*",
    "express-validator": "^6.10.0",
    "get-port": "^5.1.1",
    "helmet": "^3.23.1",
    "http-errors": "^1.7.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.8.11",
    "morgan": "^1.10.0",
    "octonode": "^0.10.2",
    "pino": "^6.13.1",
    "pino-pretty": "^6.0.0",
    "pusher": "^5.0.0",
    "pusher-js": "^7.0.3",
    "swagger-ui-express": "^4.1.6",
    "treblle": "^1.0.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.10",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.6",
    "@types/helmet": "0.0.47",
    "@types/http-errors": "^1.6.3",
    "@types/jest": "^27.0.1",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/morgan": "^1.9.1",
    "@types/multer": "^1.4.6",
    "@types/node": "^14.0.13",
    "@types/pino": "^6.3.11",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.1.0",
    "nodemon": "^2.0.2",
    "prettier": "^2.3.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.11.0",
    "tscpaths": "^0.0.9",
    "typescript": "^3.9.5"
  },
  "nodemonConfig": {
    "ignore": [
      "dist/*"
    ],
    "delay": 2500
  }
}
